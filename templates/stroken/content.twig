<section id="section{{ sectionno }}" class="section pb-content bg-transparent">
	<div class="container-fluid">
		{% if item.titel or item.link %}
			<div class="row" style="max-width:1500px; margin: 0 auto">
				<div class="col-md-10 offset-md-1">
					<div class="text-center mb-5">
						{% if item.titel %}
							<h2 class="mb-0"> {{ item.titel }} </h2>
						{% endif %}
						{% if item.link %}
							<a class="btn-link mt-0" href="{{ item.link.url }}" target="{{ item.link.target }}">{{ item.link.title }}</a>
						{% endif %}
					</div>
				</div>
			</div>
		{% endif %}
		{% if item.content_in_kolommen %}
			<div class="content-columns content-styling">
				{{ item.tekst }}
			</div>
		{% else %}
			<div class="row" style="max-width:1024px; margin: 0 auto">
				<div class="col-lg-10 offset-lg-1 text-center">
					<div class="content-styling">
						{{ item.tekst }}
					</div>
				</div>
			</div>
		{% endif %}
	</div>
</section> 