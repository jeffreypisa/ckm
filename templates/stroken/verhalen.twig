<section id="{{ sectionno }}" class="section pb-verhalen pb-0">
	<div class="container-fluid">
		<div class="card bg-frame-verhalen pt-5 pb-5">
			<a href="#section2" class="section_icon top"> <img src="{{ theme.link }}/assets/img/icon_section_verhalen.svg"> </a>
			<div class="card-body mb-5">
				<div class="row">
					<div class="col-md-10 col-lg-8 offset-md-1 offset-lg-2">
						<div class="text-center">
							<h2 class="mt-5 mb-5"> {{ item.titel }} </h2>
						</div>
					</div>
				</div>
				<br>
				<div class="row">
					{% for item in item.verhalen %}
						<div class="col-md mb-30 mb-md-0">
							<a href="{{ item.link }}" class="verhaal">
								<div class="row">
									<div class="col-10 offset-1">
										<div class="bg-cover bg-rounded ratio-1x1 mb-3" style="background-image: url({{ Image(item.thumbnail).src }})"></div>
										<h4 class="mt-0 mb-0 font-script text-center">{{ item.title }}</h4>
									</div>
								</div>
							</a>
						</div>
					{% endfor %}
				</div>
				{% if item.link %}
					<div class="container text-center">
						<div class="row">
							<div class="col-10 offset-1">
								<a class="btn btn-light" href="{{ item.link.url }}" target="{{ item.link.target }}">{{ item.link.title }}</a>
							</div>
						</div>
					</div>
				{% endif %}
			</div>
		</div>
	</div>
</section> 