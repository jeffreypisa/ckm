<section id="{{ sectionno }}" class="section pb-impact bg-white">
	<div class="container-fluid mt-5">
		<div class="text-center">
			<h2 class="mb-5 font-script text-orange"> {{ item.titel }} </h2>
		</div>
		<br>
		<div class="row">
			{% for item in item.cijfers %}
				<div class="col-md mb-30 mb-md-0">
					<div class="card bg-square-dark">
						<div class="card-body text-center d-flex align-items-center justify-content-center">
							<div data-mh>
								<h2 class="mb-0 font-script text-orange">{{ item.cijfer }}</h2>
								<h3 class="h5 mb-0 mt-0">{{ item.tekst }}</h3>
							</div>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
	<div class="container text-center">
		<div class="row">
			<div class="col-10 offset-1">
				<a class="btn-link mt-5" href="{{ item.link.url }}" target="{{ item.link.target }}">{{ item.link.title }}</a>
			</div>
		</div>
	</div>
</section> 