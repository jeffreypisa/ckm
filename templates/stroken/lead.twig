<section id="section{{ sectionno }}" class="section rafelrand bottom orange pb-lead bg-orange">
	{% if item.icoon %}
		<div class="section_icon bottom"> <img src="{{ Image(item.icoon).src }}" alt="{{ Image(item.icoon).src }}"> </div>
	{% endif %}
	<div class="container-fluid" style="max-width:1500px">
		{% if item.titel %}
			<div class="row">
				<div class="col-md-10 offset-md-1">
					<div class="text-center">
						<h2 class="mb-5"> {{ item.titel }} </h2>
					</div>
				</div>
			</div>
		{% endif %}
	</div>
	<div class="container-fluid" style="max-width:1024px">
		<div class="row">
			<div class="col-md-10 offset-md-1">
				<div class="text-center">
					{{ item.tekst }}
				</div>
			</div>
		</div>
	</div>
</section> 