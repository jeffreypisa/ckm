<section id="section{{ sectionno }}" class="section rafelrand bottom orange pb-lead bg-orange {% if item.tekst %}{% else %}d-flex align-items-center{% endif %} {% if item.icoon %}{% else %}mb-0{% endif %}">
	{% if item.icoon %}
		<div class="section_icon bottom"> <img src="{{ Image(item.icoon).src }}" alt="{{ Image(item.icoon).src }}"> </div>
	{% endif %}
	{% if item.titel %}
		<div class="container-fluid" style="max-width:1500px">
			<div class="row">
				<div class="col-md-10 offset-md-1">
					<div class="text-center">
						<h2 class="{% if item.tekst %}mb-5{% else %}pt-4 mb-0{% endif %}"> 
							{{ item.titel }} 
						</h2>
					</div>
				</div>
			</div>
		</div>
	{% endif %}
	{% if item.tekst %}
		<div class="container-fluid" style="max-width:1024px">
			<div class="row">
				<div class="col-md-10 offset-md-1">
					<div class="text-center">
						{{ item.tekst }}
					</div>
				</div>
			</div>
		</div>
	{% endif %}
</section> 