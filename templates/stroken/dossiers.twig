<section id="section{{ sectionno }}" class="section pb-dossiers bg-transparent">
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-10 col-lg-8 offset-md-1 offset-lg-2">
				<div class="text-center">
					<h2 class="font-script text-orange mt-0 mt-md-5 mb-3 mb-md-5"> {{ item.titel }} </h2>
				</div>
			</div>
		</div>
		<br>
		<div class="row justify-content-center g-0 g-md-5">
			{% for item in item.dossiers %}
				<div class="col-sm-6 col-lg-3">
					{% include 'tease-dossiers.twig' %}
				</div>
			{% endfor %}
		</div>
		{% if item.link %}
			<div class="container text-center">
				<a class="btn btn-primary" href="{{ item.link.url }}" target="{{ item.link.target }}">{{ item.link.title }}</a>
			</div>
		{% endif %}
	</div>
</section> 