<section id="banner" class="pb-banner text-white rafelrand bottom inverse white d-flex align-items-center">
	<a href="#section2" class="section_icon bottom inverse"> <img src="{{ Image(item.icoon).src }}"> </a>
	<div class="fill-space">
		<div class="bg-cover" style="background-image: url({{ Image(post.thumbnail).src|resize(1920) }})">
		</div>
	</div>
	<div class="container-fluid">
		<div class="row">
			{% if item.uitlijning == 'links' %}
				<div class="col-10 col-sm-8 col-md-7 col-lg-6 col-xl-5">
			{% else %}
				<div class="offset-2 col-10 col-sm-8 offset-sm-4 col-md-7 offset-md-5 col-lg-6 offset-lg-6 col-xl-5 offset-xl-7 text-end">
			{% endif %}
				<h2 class="h1">
					{% if item.titel %}{{ item.titel }}{% else %}{{ post.titel }}{% endif %}
				</h2>
			</div>
		</div>
</section>