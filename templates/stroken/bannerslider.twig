<section id="banner" class="pb-banner text-white rafelrand bottom inverse white">
	<a href="#section2" class="section_icon bottom inverse"> <img src="{{ theme.link }}/assets/img/icon_section_down.svg"> </a>
	<div class="bannerslider js-slick-bannerslider">
		{% for item in item.slider %}
			<a href="{{ item.link.url }}" target="{{ item.link.target }}" class="item d-flex align-items-center">		
				<div class="fill-space">
					<div class="bg-cover" style="background-image: url({{ Image(item.afbeelding).src }})">
					</div>
				</div>
				
				<div class="container-fluid">
					<div class="row">
						{% if item.uitlijning == 'links' %}
						<div class="col-10 col-sm-8 col-md-7 col-lg-6 col-xl-5">
						{% else %}
						<div class="offset-2 col-10 col-sm-8 offset-sm-4 col-md-7 offset-md-5 col-lg-6 offset-lg-6 col-xl-5 offset-xl-7 text-end">
						{% endif %}
							<h2 class="h1 mb-5">
								{{ item.titel }} <img class="d-inline d-md-none" src="{{ theme.link }}/assets/img/icon_arrow_orange.svg" alt="arrow">
							</h2>
							<div class="row d-none d-md-flex">
								<div class="col-auto {% if item.uitlijning == 'rechts' %}order-last{% endif %}">
									<img src="{{ Image(item.icoon).src }}" alt="{{ Image(item.icoon).alt }}">
								</div>
								<div class="col d-flex align-items-center">
									<div {% if item.uitlijning == 'rechts' %}class="text-end w-100"{% endif %}>
										<h4 class="font-script mt-1 mb-2">
											{{ item.kleine_tekst }}
										</h4>
										<img class="d-inline-block" src="{{ theme.link }}/assets/img/icon_arrow_orange.svg" alt="arrow">
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</a>
		{% endfor %}
	</div>
</section> 