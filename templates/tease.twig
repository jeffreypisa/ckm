<a href="{{ item.link }}" target="{{ item.link.target}}" class="tease tease-{{ item.post_type }} mb-30 d-block">
	<div class="afbeelding-wrapper ratio-4x3">
		<div class="afbeelding bg-cover" style="background-image: url({{ Image(item.thumbnail)|resize(1024) }})"></div>
	</div>
	<h3 class="h4 mt-4 mb-2"> {{ item.title }} </h3>
	<div data-mh>
		{{ item.preview.length(40).read_more('') }}
	</div>
	<div class="btn-link mt-3" href="{{ item.link.url }}" target="{{ item.link.target }}">{{ options.dossiers_teaser_lees_verder }}</div>
</a>