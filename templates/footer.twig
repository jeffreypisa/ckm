{% if post.verberg_footer %}
	<footer id="footer">
		<div class="footeralt bg-footer text-white text-center">
			<div class="container-fluid">
				<br><br>
				<h2 class="font-script text-orange mb-5">  {{ options.footeralt_titel }}</h2>
				{{ options.footeralt_tekst }}
				{% for logo in options.logos_wit %}
					<div class="logowit" style="background-image: url({{ Image(logo.logo).src }})"></div>
				{% endfor %}
			</div>
			<div class="subfooter pt-5">
				<div class="container-fluid d-flex justify-content-center">
					<div>
						© {{ 'now' | date('Y') }} {{ site.description}}
					</div>
				</div>
				<br>
			</div>
		</div>
	</footer>
{% else %}
	<footer id="footer">
		<div class="footer bg-footer text-white text-center">
			<div class="section_icon top"> <img src="{{ theme.link }}/assets/img/icon_section_samen.svg"> </div>
			<div class="container-fluid">
				<br>
				<h2 class="font-script text-orange mb-5">  {{ options.footer_titel }}</h2>
				<br>
				<div class="row mb-4 g-lg-5">
					<div class="col-lg-6 col-xl-4 mb-5">
						<h3 class="mb-5">{{ options.footer_kolom_1_titel }}</h3>
						{% if options.footer_kolom_1_link %}
							<a class="btn btn-primary mb-2" href="{{ options.footer_kolom_1_link.url }}" target="{{ options.footer_kolom_1_link.target }}">{{ options.footer_kolom_1_link.title }}</a>
						{% endif %}
						{{ options.footer_kolom_1_tekst }}
					</div>
					<div class="col-lg-6 col-xl-4 mb-5">
						<h3 class="mb-5">{{ options.footer_kolom_2_titel }}</h3>
						{{ options.footer_kolom_2_tekst }}
						{% include 'partial/socialmedia.twig' %}
					</div>
					<div class="col-lg-6 col-xl-4 mb-5 mb-xl-0">
						<h3 class="mb-5">{{ options.footer_kolom_3_titel }}</h3>
						{{ options.footer_kolom_3_tekst }}
					</div>
					<div class="col-lg-6 col-xl-12">
						<div class="row">
							<div class="col-xl-4 mb-4 mb-xl-0 d-flex align-items-center justify-content-center">
								<div class="logowitcontainer">
									{% for logo in options.logos_wit %}
										<div class="logowit" style="background-image: url({{ Image(logo.logo).src }})"></div>
									{% endfor %}
								</div>
							</div>
							<div class="col-xl-4 d-flex	align-items-center justify-content-center">
								{% include "menu-taal.twig" with {'items': language_switcher.get_items} %}
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="subfooter pt-5">
				<div class="container-fluid d-flex justify-content-center">
					<div>
						© {{ 'now' | date('Y') }} {{ site.description}} {% include "footermenu.twig" with {'items': footermenu.get_items} %}
					</div>
				</div>
			</div>
		</div>
		{% if fn('is_front_page') %}
			<div class="logos d-none d-md-block">
				<div class="container-fluid">
					<div class="row">
						{% for logo in options.logos %}
							<div class="col">
								<div class="logo" style="background-image: url({{ Image(logo.logo).src }})"></div>
							</div>
						{% endfor %}
					</div>
				</div>
			</div>
		{% endif %}
	</footer>
{% endif %}