{# This file demonstrates using most of the index.twig template and modifying 
   just a small part. See `search.twig` for an example of another approach #}

{% extends "base.twig" %}

{% block content %}
    <article class="post-type-{{ post.post_type }}" id="post-{{ post.ID }}">
       <section id="{{ sectionno }}" class="section rafelrand bottom orange pb-lead bg-orange text-dark mb-5">
          {% if options.dossiers_archief_icoon %}
             <div class="section_icon bottom"> <img src="{{ Image(options.dossiers_archief_icoon).src }}" alt="{{ Image(options.dossiers_archief_icoon).src }}"> </div>
          {% endif %}
          <div class="container-fluid mt-3 mb-3 mt-md-5 mb-md-5">
             {% if options.dossiers_archief_titel %}
                <div class="row">
                   <div class="col-md-10 col-lg-8 col-xl-6 offset-md-1 offset-lg-2 offset-xl-3">
                      <div class="text-center">
                         <h2 class="mb-5"> {{ options.dossiers_archief_titel }} </h2>
                      </div>
                   </div>
                </div>
             {% endif %}
             <div class="row">
                <div class="col-md-10 col-lg-8 offset-md-1 offset-lg-2">
                   <div class="text-center">
                      {{ options.dossiers_archief_tekst }} 
                   </div>
                </div>
             </div>
          </div>
       </section> 
        <section class="mod-archive">
            <div class="container-fluid">
               <div class="text-center">
                  <h2 class="font-script text-orange mt-5 mb-5">{{ options.dossiers_archief_actueel_titel }}</h2>
               </div>
               <div id="theposts" class="row pt-2 g-5">
                  {% for item in terms %}
                      <div class="col-md-6 col-lg-4 col-xl-3">
                          {% include ['tease-dossiers.twig'] %}
                      </div>
                  {% endfor %}
               </div>  
            </div>
        </section>
    </article>
{% endblock %}